<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bc_title"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="48dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_left" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/height_25dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_fill">


            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:background="@null"
                android:paddingTop="@dimen/height_5dp"
                android:paddingLeft="@dimen/height_10dp"
                android:paddingBottom="@dimen/height_5dp"
                android:textSize="@dimen/text_size_14"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="25dp"
                android:layout_marginRight="@dimen/height_15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_search"
                android:layout_alignParentRight="true"
                android:layout_height="25dp" />

        </RelativeLayout>
    </LinearLayout>


    <com.mutoumulao.expo.redwood.view.TabPageIndicator
        android:id="@+id/pageindicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_materials"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>