<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/height_15dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/height_10dp"
        android:paddingBottom="@dimen/height_10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_store_head"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名称" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:textColor="@color/tc_black6"
        android:textSize="@dimen/text_size_12"
        android:layout_marginTop="@dimen/height_5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:textColor="@color/tc_black6"
        android:textSize="@dimen/text_size_12"
        android:layout_marginTop="@dimen/height_5dp"
        android:layout_height="wrap_content" />

</LinearLayout>