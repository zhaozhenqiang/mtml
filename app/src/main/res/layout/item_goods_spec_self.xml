<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_marginRight="@dimen/L"
        android:visibility="visible"
        >

        <EditText
            android:id="@+id/tv_size"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_gray_rect"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="请输入"
            android:gravity="center" />

        <RelativeLayout
            android:id="@+id/rl_del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/tv_size"
            android:gravity="right"
            android:orientation="vertical">


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="center"
            android:layout_toRightOf="@+id/rl_del"

            android:src="@drawable/icon_delet_photo" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_spec_self"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/height_10dp"
        android:background="@drawable/shape_gray_rect"
        android:gravity="center"
        android:singleLine="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:visibility="gone"
        android:hint="请输入"/>
</RelativeLayout>