<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <include layout="@layout/layout_title_right_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_reset_pwd"
                style="@style/common_45dp_linearLayout">

                <TextView
                    style="@style/common_select_text"
                    android:text="重置密码" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avater"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/height_15dp"
                    android:text="头像"
                    android:textColor="@color/tc_black3" />

                <com.mutoumulao.expo.redwood.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/height_10dp" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_username"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_1px">

                <TextView
                    style="@style/common_select_text"
                    android:text="用户名" />

                <EditText
                    android:id="@+id/tv_username"
                    style="@style/common_edit"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:inputType="text"
                    android:text="" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_address"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_10dp">

                <TextView
                    style="@style/common_select_text"
                    android:text="收货地址" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/common_01color_text"
                    android:text="" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_back_message"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_1px">

                <TextView
                    style="@style/common_select_text"
                    android:text="意见反馈" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clear_cook"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_1px">

                <TextView
                    style="@style/common_select_text"
                    android:text="清除缓存" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_guide"
                style="@style/common_45dp_linearLayout"
                android:layout_marginTop="@dimen/height_1px">

                <TextView
                    style="@style/common_select_text"
                    android:text="用户指南" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView style="@style/common_arrows_right" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_button_red"/>
</LinearLayout>