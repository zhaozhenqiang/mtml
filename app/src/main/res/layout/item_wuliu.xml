<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/height_15dp"
    android:paddingRight="@dimen/height_15dp"
    >


    <TextView
        android:id="@+id/tv_time_out"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="11"
        android:textColor="@color/tc_black3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/height_10dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view01"
            android:layout_width="@dimen/height_15dp"
            android:background="@drawable/shape_red_cycle_fill"
            android:layout_height="@dimen/height_15dp"/>

        <View
            android:layout_width="@dimen/height_1px"
            android:background="@color/line_color"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/height_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/tc_black3" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5dp"
            android:text="11"
            android:textColor="@color/tc_black6"
            android:textSize="@dimen/recall_size_12" />

    </LinearLayout>
</LinearLayout>