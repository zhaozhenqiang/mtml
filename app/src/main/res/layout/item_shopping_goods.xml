<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/height_10dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/height_10dp"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/height_10dp"
            android:button="@drawable/checkbox_style_selector"
            android:clickable="false"
            android:focusable="false" />

        <ImageView
            android:id="@+id/iv_goods_head"
            android:background="@color/line_color"
            android:layout_width="90dp"
            android:scaleType="center"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_marginLeft="@dimen/height_10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:text="太师椅"
                android:textColor="@color/tc_black3"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/tc_black6"
                android:text="默认样式"
                android:layout_marginTop="@dimen/height_10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:text="价格"
                    android:textColor="@color/tc_red_price"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.mutoumulao.expo.redwood.view.AmountView
                    android:id="@+id/av_add_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    app:btnWidth="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>