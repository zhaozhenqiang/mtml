<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_right_text" />

    <RelativeLayout
        android:paddingTop="@dimen/height_20dp"
        android:paddingBottom="@dimen/height_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="160dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机快捷登录"
            android:textColor="@color/tc_red" />

        <TextView
            android:id="@+id/tv_pwd_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账号密码登录"
            android:textColor="@color/tc_black6" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/scrollbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@drawable/shape_scrollbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="38dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/height_1px"
                android:layout_weight="1"
                android:background="@color/bg_activity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="第三方登录"
                android:textColor="@color/bc_blackd"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/height_1px"
                android:layout_weight="1"
                android:background="@color/bc_blackd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/tv_qq_login"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_qq" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/tv_wechat_login"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_wx" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/tv_sina_login"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_wb" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/tv_shimin_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>