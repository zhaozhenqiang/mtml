<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/height_15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@color/bg_activity">


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_get_code"
                android:background="@null"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/height_15dp"
                android:text=""
                android:textSize="@dimen/height_15dp" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_25dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/tc_red" />


        </RelativeLayout>

        <EditText
            android:id="@+id/et_vcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@color/bg_activity"
            android:hint="请输入短信验证码"
            android:paddingLeft="@dimen/height_15dp"
            android:inputType="textPassword"
            android:textSize="@dimen/height_15dp" />

        <include
            layout="@layout/layout_button_red" />


        <TextView
            android:layout_marginTop="@dimen/height_30dp"
            android:text="未注册过的手机将自动注册为木头木佬账户"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/tc_black9"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>